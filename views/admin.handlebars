                {{/each}}

                 {{#each thursdayWaiters}}
                <td>{{this.waiter}}</td>
                {{/each}}

                {{#each fridayWaiters}}
                <td>{{this.waiter}}</td>
                {{/each}}

                {{#each sartudayWaiters}}
                <td>{{this.waiter}}</td>
                {{/each}}

            </tr>


        </table>
        <a href="/clear"></a><button type="submit" class="btnblue" style="margin: 300px;">Clear Names</button>
