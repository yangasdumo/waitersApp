<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="message">
      {{messages.message}}
    </div>

    <h1 style="color:#141A46">Waiters Availability working Days</h1>
    <form action="/admin" method="POST">
      <table style="width:100%">
        <br />
        <br />
        <br />
        <br />
        <tr>
          {{#each weeklyDays}}
            <th
              style="color: #141A46;"
              class="{{this.status}} day"
            >{{this.weekDay}}</th>
          {{/each}}
        </tr>
        <tr class="table">

          <td>
            {{#each mondayWaiters}}
              <li>{{this.waiter}}</li>
            {{/each}}
          </td>

          <td>
            {{#each tuesdayWaiters}}
              <li>{{this.waiter}}</li>
            {{/each}}
          </td>

          <td>
            {{#each wednsdayaiters}}
              <li>{{this.waiter}}</li>
            {{/each}}
          </td>

          <td>
            {{#each thursdayWaiters}}
              <li>{{this.waiter}}</li>
            {{/each}}
          </td>

          <td>
            {{#each fridayWaiters}}
              <li>{{this.waiter}}</li>
            {{/each}}
          </td>

          <td>
            {{#each sartudayWaiters}}
              <li>{{this.waiter}}</li>
            {{/each}}
          </td>

          <td>
            {{#each sundayWaiters}}
              <li>{{this.waiter}}</li>
            {{/each}}
          </td>
        </tr>

      </table>
      <button type="submit" class="btnblue" style="margin: 300px;">Clear Names</button>
    </form>
  </body>
  <script src="/setTimeout.js"></script>

</html>